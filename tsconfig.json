{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.d.ts"]
}
